<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<VBox alignment="TOP_CENTER" prefHeight="616.0" prefWidth="274.0" style="-fx-background-color: #00275e;"
      stylesheets="@../styles/menuAdmin.css" xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.SidebarMenuController">
    <children>
        <ImageView fitHeight="73.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/man.png"/>
            </image>
            <VBox.margin>
                <Insets top="15.0"/>
            </VBox.margin>
        </ImageView>
        <Text fill="#faf9f6" strokeType="OUTSIDE" strokeWidth="0.0" text="Admin">
            <font>
                <Font size="18.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Text>
        <Text fill="#faf9f6" strokeType="OUTSIDE" strokeWidth="0.0" text="ID: 99999">
            <font>
                <Font size="15.0"/>
            </font>
            <VBox.margin>
                <Insets bottom="15.0" top="3.0"/>
            </VBox.margin>
        </Text>
        <Button fx:id="manageFacilitiesButton" onAction="#handleManageFacilities" graphicTextGap="10.0"
                mnemonicParsing="false" prefHeight="64.0" prefWidth="306.0" style="-fx-background-color: #00275e;"
                styleClass="sidebar-button" text="Manage Facilities " textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/medal.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="85.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Manage Facilities"/>
            </tooltip>
        </Button>
        <Button fx:id="manageBookingsButton" onAction="#handleManageBookings" graphicTextGap="10.0"
                mnemonicParsing="false" prefHeight="64.0" prefWidth="318.0" style="-fx-background-color: #00275e;"
                styleClass="sidebar-button" text="Manage Bookings" textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/calendar.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="80.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Manage Bookings"/>
            </tooltip>
        </Button>
        <Button fx:id="approvalRequestsButton" onAction="#handleApprovalRequests" graphicTextGap="10.0"
                mnemonicParsing="false" prefHeight="64.0" prefWidth="344.0" style="-fx-background-color: #00275e;"
                styleClass="sidebar-button" text="Approval Requests" textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="37.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/stamp.png"/>
                        </image>
                    </ImageView>
                    <StackPane>
                        <Label fx:id="approvalCountLabel" text="4" styleClass="notification-badge"/>
                    </StackPane>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="80.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Approval Requests"/>
            </tooltip>
        </Button>
        <Button fx:id="cancellationRequestsButton" onAction="#handleCancellationRequests" graphicTextGap="10.0"
                mnemonicParsing="false" prefHeight="64.0" prefWidth="300.0" style="-fx-background-color: #00275e;"
                styleClass="sidebar-button" text="Cancellation Requests" textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="37.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/cancel.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="60.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Cancellation Requests"/>
            </tooltip>
        </Button>
        <Button fx:id="reportButton" onAction="#handleReport" graphicTextGap="10.0" mnemonicParsing="false"
                prefHeight="64.0" prefWidth="322.0" style="-fx-background-color: #00275e;" styleClass="sidebar-button" text="Report"
                textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="37.0" fitWidth="33.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/file.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="160.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Reports"/>
            </tooltip>
        </Button>
        <Button fx:id="resetPasswordButton" onAction="#handleResetPassword" graphicTextGap="10.0"
                mnemonicParsing="false" prefHeight="64.0" prefWidth="350.0" style="-fx-background-color: #00275e;" styleClass="sidebar-button"
                text="Reset Password" textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="39.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/password.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="100.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Reset Your Password"/>
            </tooltip>
        </Button>
        <Button fx:id="logoutButton" onAction="#handleLogout" graphicTextGap="10.0" mnemonicParsing="false"
                prefHeight="64.0" prefWidth="350.0" style="-fx-background-color: #00275e;" styleClass="sidebar-button"
                text="Logout" textFill="WHITE">
            <graphic>
                <HBox alignment="CENTER">
                    <ImageView fitHeight="39.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <Image url="@../images/logout.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </graphic>
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
            <padding>
                <Insets right="100.0"/>
            </padding>
            <tooltip>
                <Tooltip text="Logout"/>
            </tooltip>
        </Button>
    </children>
</VBox>