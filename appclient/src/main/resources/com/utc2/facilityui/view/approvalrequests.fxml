<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefWidth="200.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.ApprovalRequestController">
    <stylesheets>
        <String fx:value="/com/utc2/facilityui/styles/approvalcards.css" />
    </stylesheets>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label fx:id="mainTitleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-alignment: center;" text="Approval Status" />
        <ScrollPane fitToWidth="true" maxWidth="500.0" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="requestContainer" spacing="10.0" />
            </content>
        </ScrollPane>
    </children>
</VBox>
