<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.EditFacilityController">
    <padding>
        <javafx.geometry.Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label text="Edit Facility" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Name/Building:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Capacity:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="capacityTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Type Room:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="typeRoomTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button text="Save" onAction="#handleSave"/>
        <Button text="Cancel" onAction="#handleCancel"/>
    </HBox>
</VBox>