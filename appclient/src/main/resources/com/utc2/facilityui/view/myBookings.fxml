<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.booking.MyBookingsController">
   <children>
      <VBox prefHeight="600.0" prefWidth="850.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox alignment="CENTER" prefHeight="49.0">
               <children>
                  <Label alignment="CENTER" prefHeight="45.0" text="My Bookings">
                     <font>
                        <Font name="Arial Bold" size="30.0" />
                     </font>
                     <textFill>
                        <LinearGradient endX="1.0" endY="1.0">
                           <stops>
                              <Stop offset="0.0" color="#1976d2" />
                              <Stop offset="1.0" color="#00bcd4" />
                           </stops>
                        </LinearGradient>
                     </textFill>
                  </Label>
               </children>
            </HBox>

            <Label fx:id="statusLabel" text="" />
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
               <content>
                  <VBox fx:id="cardsContainerVBox" spacing="15.0">
                     <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>

            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" spacing="10.0">
               <padding>
                  <Insets right="10.0" />
               </padding>
               <children>
                  <Label text="Số dòng/trang:" />
                  <ComboBox fx:id="myRowsPerPageComboBox" prefWidth="70.0" onAction="#handleMyRowsPerPageChange" />
                  <Button fx:id="myPreviousButton" mnemonicParsing="false" text="Trước" onAction="#handleMyPreviousPage" />
                  <Label fx:id="myPageInfoLabel" text="Trang X / Y (Z mục)" />
                  <Button fx:id="myNextButton" mnemonicParsing="false" text="Sau" onAction="#handleMyNextPage" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>