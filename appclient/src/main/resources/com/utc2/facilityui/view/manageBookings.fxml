<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.ManageBookingsController">
    <top>
        <VBox alignment="TOP_LEFT" spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 10;">
            <children>
                <HBox alignment="CENTER_LEFT">
                    <children>
                        <Label text="Manage Bookings">
                            <font>
                                <Font name="System Bold" size="30.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <Button onAction="#handleExportBookings" prefHeight="26.0" prefWidth="69.0" style="-fx-background-color: #1976d2;" text="EXPORT" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Button onAction="#handleShowAllBookings" text="All" />
                        <Button onAction="#handleShowThisMonthBookings" style="-fx-background-color: #ffffff;" text="This month" />
                        <ComboBox fx:id="monthComboBox" onAction="#handleSearchByMonth" promptText="Select month" style="-fx-background-color: #ffffff;" />
                        <TextField fx:id="yearTextField" onAction="#handleFilterByYear" promptText="Search year" />
                        <TextField fx:id="facilityTextField" onKeyReleased="#handleLiveSearchFacility" promptText="Search room" />
                        <TextField fx:id="employeeIdTextField" onKeyReleased="#handleLiveSearchByUser" promptText="Search user" />
                        <Button onAction="#handleResetFilters" style="-fx-background-color: #1976d2;" text="RESET" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets left="15.0" />
            </padding>
        </VBox>
    </top>
    <center>
        <TableView fx:id="bookingsTable" prefHeight="400.0" prefWidth="985.0" stylesheets="@../styles/manageBooking.css">
            <columns>
                <TableColumn fx:id="roomNameColumn" prefWidth="150.0" text="Room Name" />
                <TableColumn fx:id="userNameColumn" prefWidth="120.0" text="User Name" />
                <TableColumn fx:id="purposeColumn" prefWidth="150.0" text="Purpose" />
                <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date" />
                <TableColumn fx:id="timeSlotColumn" prefWidth="150.0" text="Time Slot" />
                <TableColumn fx:id="createdAtColumn" prefWidth="150.0" text="Created At" />
                <TableColumn fx:id="approvedByColumn" prefWidth="120.0" text="Approved By" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
            </columns>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10; -fx-background-color: #ffffff;">
            <children>
                <Label text="Rows per page:" />
                <ComboBox fx:id="rowsPerPageComboBox" onAction="#handleRowsPerPageChange" prefWidth="80.0" style="-fx-background-color: #ffffff;" />
                <Label fx:id="currentPageLabel" text="1-6 of 0" />
                <Button onAction="#handlePreviousPage" style="-fx-background-color: #ffffff;" text="&lt;" />
                <Button onAction="#handleNextPage" style="-fx-background-color: #ffffff;" text="&gt;" />
            </children>
        </HBox>
    </bottom>
    <padding>
        <Insets left="15.0" right="15.0" />
    </padding>
</BorderPane>