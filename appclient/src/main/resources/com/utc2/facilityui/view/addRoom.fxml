<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utc2.facilityui.controller.room.addRoomController">
    <children>
        <VBox layoutX="27.0" layoutY="25.0" prefHeight="350.0" prefWidth="546.0" spacing="15.0">
            <children>
                <Label text="Thêm Phòng Mới">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Tên phòng (*)" />
                        <TextField fx:id="nameTextField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Mô tả" />
                        <TextField fx:id="descriptionTextField" />
                    </children>
                </VBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Vị trí chi tiết" />
                        <TextField fx:id="locationTextField" />
                    </children>
                </VBox>
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Sức chứa (*)" />
                                <TextField fx:id="capacityTextField" prefWidth="150.0" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Ảnh URL/Path" />
                                <TextField fx:id="imageURLTextField" prefWidth="380.0" />
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox spacing="10.0">
                    <children>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Tòa nhà (*)" />
                                <TextField fx:id="buildingTextField" prefWidth="250.0" />  </children>
                        </VBox>
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Loại phòng (*)" />
                                <TextField fx:id="roomTypeTextField" prefWidth="250.0" />  </children>
                        </VBox>
                    </children>
                </HBox>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Người quản lý (Tùy chọn)" />
                        <TextField fx:id="managerTextField" prefWidth="500.0" />  </children>
                </VBox>
                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleCancelAddRoom" text="Hủy bỏ" />
                        <Button mnemonicParsing="false" onAction="#handleAddRoom" style="-fx-background-color: #1976d2; -fx-text-fill: white;" text="Thêm phòng" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>