                <Label fx:id="pageInfoLabel" text="1-4 of 4" translateX="-50.0" />
                <Button fx:id="prevPageButton" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-padding: 5px;" text="&lt;" translateX="-50.0" />
                <Button fx:id="nextPageButton" style="-fx-background-color: #ffffff; -fx-border-radius: 5px; -fx-padding: 5px;" text="&gt;" translateX="-50.0" />
            </children>
        </HBox>
    </bottom>
    <padding>
        <Insets left="15.0" />
    </padding>
</BorderPane>
