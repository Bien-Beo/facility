                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="statusCompleted" layoutX="284.0" layoutY="32.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="123.0" text="COMPLETED">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                        <CheckBox fx:id="statusIn_Progress" layoutX="141.0" layoutY="32.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="115.0" text="IN_PROGRESS">
