                            <textFill>
                                <LinearGradient endX="1.0" endY="1.0">
                                    <stops>
                                        <Stop color="#1976d2" offset="0.0" />
                                        <Stop color="#00bcd4" offset="1.0" />
                                    </stops>
                                </LinearGradient>
                            </textFill>
                        </Label>
                        <HBox alignment="CENTER_RIGHT" prefHeight="36.0" prefWidth="502.0" HBox.hgrow="ALWAYS">
                            <children>
                                <Button prefHeight="34.0" prefWidth="117.0" style="-fx-background-color: #1976d2; -fx-background-radius: 5px; -fx-text-fill: white;" text="XUẤT EXCEL" translateX="-80.0">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                    <graphic>
                                        <HBox prefHeight="20.0" prefWidth="26.0">
                                            <children>
                                                <ImageView fitHeight="20.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../images/download.png" />
                                                    </image>
                                                </ImageView>
                                            </children>
                                        </HBox>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_LEFT" prefHeight="63.0" prefWidth="815.0" spacing="10.0" stylesheets="@../styles/mainUI.css" translateY="30.0">
               <children>
                  <AnchorPane prefHeight="53.0" prefWidth="814.0" stylesheets="@../styles/mainUI.css">
                     <children>
                        <CheckBox fx:id="statusReported" layoutX="14.0" layoutY="32.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="94.0" text="REPORTED">
