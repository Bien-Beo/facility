        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-padding: 10; -fx-background-color: #ffffff;" stylesheets="@../styles/manageBooking.css">
            <children>
                <Label text="Rows per page:" translateX="-50.0" />
