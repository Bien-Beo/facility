                        <CheckBox layoutX="586.0" layoutY="32.0" mnemonicParsing="false" prefHeight="28.0" prefWidth="115.0" text="CANCELLED">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </CheckBox>
                     </children>
                  </AnchorPane>
               </children>
               <styleClass>
                  <String fx:value="shadow" />
                  <String fx:value="white-bg" />
               </styleClass>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <TableView fx:id="bookingsTable" prefHeight="385.0" prefWidth="835.0" stylesheets="@../styles/manageBooking.css">
            <columns>
                <TableColumn fx:id="roomName" prefWidth="107.0" text="Phòng" />
                <TableColumn fx:id="modelName" prefWidth="179.0" text="Thiết bị" />
                <TableColumn fx:id="description" prefWidth="190.5" text="Mô tả sự cố" />
                <TableColumn fx:id="status" prefWidth="172.5" text="Trạng thái" />
                <TableColumn fx:id="reportByUser" prefWidth="124.5" text="Người báo cáo" />
                <TableColumn fx:id="reportedAt" prefWidth="186.5" text="Thời gian báo cáo" />
                <TableColumn fx:id="technicianName" prefWidth="100.0" text="KTV được giao" />
                <TableColumn fx:id="actionColumn" prefWidth="220.0" text="Hành động" />
